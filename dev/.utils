remote-conundra() {
  # Ensure we're inside a git repo
  if ! git rev-parse --is-inside-work-tree > /dev/null 2>&1; then
    echo "âŒ Not inside a git repository."
    return 1
  fi

  # Get the current origin URL
  current_url=$(git remote get-url origin 2>/dev/null)

  if [[ -z "$current_url" ]]; then
    echo "âŒ No 'origin' remote found."
    return 1
  fi

  # Only act if it's a gitlab.com URL
  if [[ "$current_url" == git@gitlab.com:* ]]; then
    new_url="${current_url/git@gitlab.com:/git@gitlab-conundra.com:}"
    echo "ğŸ”„ Updating origin:"
    echo "   Old: $current_url"
    echo "   New: $new_url"
    git remote set-url origin "$new_url"
    echo "âœ… Remote updated."
  else
    echo "â„¹ï¸ Remote is not git@gitlab.com â€” no changes made."
  fi
}

sound() {
  # Function to switch audio input and output sources
  echo "ğŸ”Š Configuring audio devices..."

  # Set input device based on priority
  local input_devices=$(SwitchAudioSource -a -t input)
  if echo "$input_devices" | grep -q "Shure"; then
    echo "ğŸ¤ Setting input device to 'Shure'..."
    SwitchAudioSource -t input -s 'Shure'
  else
    echo "ğŸ¤ Setting input device to 'MacBook Pro Microphone'..."
    SwitchAudioSource -t input -s 'MacBook Pro Microphone'
  fi

  # Set output device based on priority
  local output_devices=$(SwitchAudioSource -a -t output)
  if echo "$output_devices" | grep -q "Michels Shokz"; then
    echo "ğŸ”ˆ Setting output device to 'Michels Shokz'..."
    SwitchAudioSource -t output -s 'Michels Shokz'
  elif echo "$output_devices" | grep -q "WH-1000XM4"; then
    echo "ğŸ”ˆ Setting output device to 'WH-1000XM4'..."
    SwitchAudioSource -t output -s 'WH-1000XM4'
  else
    echo "ğŸ”ˆ Setting output device to 'MacBook Pro Speakers'..."
    SwitchAudioSource -t output -s 'MacBook Pro Speakers'
  fi

  # Set microphone input volume to 100%
  echo "ğŸ¤ Setting microphone level to 100%..."
  osascript -e 'set volume input volume 100'
}
